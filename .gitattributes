# Auto detect text files and perform LF normalization
* text=auto

# Source code files
*.py text eol=lf
*.pyw text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# License files
LICENSE* text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Exclude from export
.gitattributes export-ignore
.gitignore export-ignore

